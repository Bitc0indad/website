---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import FeaturesLink from '~/components/widgets/FeaturesLink.astro';

import { headerData } from '~/data';

const meta = {
  title: 'PLEBNET.DEV Projects',
};
---

<Layout {meta}>
  <Fragment slot="header">
    <Header
      {...headerData}
      actions={[
        {
          type: "primary",
          text: 'Sign Up',
          href: '/join',
        },
      ]}
      isSticky
    />
  </Fragment>

   <!-- Features3 Widget ************** -->

   <FeaturesLink
   title="Projects"
   subtitle="Engage with projects that members are building. Have a project you are working and want to share it? Looking for new contributors? Add yours here!"
 
   items={[
     {
       title: 'Bitcoin Core',
       description: 'Layer 1 of the Bitcoin protocol',
       link:'https://github.com/bitcoin',
       icon: 'flat-color-icons:checkmark',
     },
     {
       title: 'Core Lightning',
       link:'https://github.com/ElementsProject/lightning',
       description:'Layer 2 of the Bitcoin Protocol',
       icon: 'flat-color-icons:gallery',
     },
     {
       title: 'Plebnet Playground',
       description: 'Testnet docker playground for bitcoin layers and applications',
       link: 'https://github.com/plebnet-playground',
       icon: 'flat-color-icons:todo-list',
     },
     {
       title: 'LNBits',
       description: 'Free Open-Source Bitcoin Lightning Accounts System with Extensions',
       link:'https://github.com/LNBits/LNBits',
       icon: 'flat-color-icons:document',
     },
     {
       title: 'pylnbits',
       description:'A python SDK package for LNBits API',
       link:'https://github.com/lightningames/pylnbits',
       icon: 'flat-color-icons:advertising',
     },
     {
       title: 'Signet/Testnet Faucet',
       description:'Coming Soon...',
       link: 'https://github.com/lightningames/faucet/',
       icon: 'flat-color-icons:checkmark',
     },
     {
       title: 'Nostr',
       link:'https://github.com/nostr-protocol/nostr',
       description:'Notes and Other stuff transmitted over relays',
       icon: 'flat-color-icons:business-contact',
     },
     {
       title: 'BTCPay Server',
       description:'Bitcoin and Lightning payments server',
       link: 'https://github.com/btcpayserver/btcpayserver',
       icon: 'flat-color-icons:document',
     },
     {
       title: 'Sats Converter',
       description:'A simple bitcoin to fiat converter',
       link:'https://github.com/plebnet-dev/satsconverter',
       icon:'flat-color-icons:currency-exchange',
     },

    //  {
    //   title:'',
    //   description:'',
    //   icon: 'flat-color-icons:document',

    //  }
   ]}
 />


</Layout>
